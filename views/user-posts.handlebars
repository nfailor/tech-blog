<div class="posts">
  {{#each data.userHistory}}
  {{log "userHistory: " data.userHistory}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/blogpost/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by {{user_id}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>